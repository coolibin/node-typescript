{
  "compilerOptions": {
    "target": "es2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "outDir": "dist",
    "lib": [
      "es2022",
      "dom"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true, // for native execution
    "noEmit": true,
    "verbatimModuleSyntax": true, // enforces the TS requirements in editor
  }
}
